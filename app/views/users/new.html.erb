<h1>Sign Up</h1>

<form action='/users' method='post'>
	<input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
	<label>Email <input type="text" name="user[email]"></label><br>
	<label>Name <input type="text" name="user[name]"></label><br>
	<label>Password<input type="password" name="user[password]"></label><br>
	<label>Password Confirmation<input type="password" name="user[password_confirmation]"></label><br>
	<input type="submit" value="Join">
</form>